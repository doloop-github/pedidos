<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CantidadProductos">

    <include layout="@layout/encabezado"></include>
    <include layout="@layout/lista_productos"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="@style/Botones"
            android:id="@+id/menos"
            android:text="-"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/ColorBlanco">
        </Button>

        <EditText
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:id="@+id/cantidad"
            android:textSize="35sp"
            android:text=""
            android:lines="1"
            android:gravity="center_horizontal">
        </EditText>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="@style/Botones"
            android:id="@+id/mas"
            android:text="+"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/ColorBlanco">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Confirma_cantidad"
            android:text="@string/eti_confima"
            style="@style/BtnConfPed"
            android:layout_marginLeft="@dimen/Margenes20"
            android:layout_marginRight="@dimen/Margenes20"
            android:layout_marginTop="@dimen/Margenes100"></Button>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>
